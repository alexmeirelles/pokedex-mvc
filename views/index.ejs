<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.gstatic.com"> 
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">

    <title>Blue Pokedex</title>
</head>
<body>
    
    <header>
        
        <center>
            <img id="logo" src="https://pokedex.sleduardo.dev/img/logo.svg"> 
        </center>   
        
    </header>
    
    <% if(message != "") {  %>
        <section id="message">
            <p><%= message %></p> <span id="close">&times;</span>
        </section>
    <% }  %>

    <main>
        <section id="cards">

        <% pokedex.forEach((pokemon,id) => { %>
        <div class="card">
            <a href="/detalhes/<%=id%>"></a>
            <img src="<%= pokemon.imagem %>" alt>
            <h2><%= pokemon.nome %></h2>
            <p class="descricao"><%= pokemon.descricao %></p>
            <p><%= pokemon.tipo %></p>
            </a>
        </div>
        <% }) %>

        </section>

        <section id="cadastro">
            <h2>CADASTRO NOVO POKEMON</h2>
            <form action="/add" method="POST">
                
                <label for="numero">Numero: </label>
                <input type="text" id="numero" name="numero">

                <label for="nome">Nome: </label>
                <input type="text" id="nome" name="nome">

                <label for="tipo">Tipo: </label>
                <input type="text" id="tipo" name="tipo">

                <label for="imagem">Link da Imagem: </label>
                <input type="text" id="imagem" name="imagem">

                <label for="descricao">Descrição: </label>
                <input type="text" id="descricao" name="descricao">

                <label for="altura">Altura: </label>
                <input type="text" id="altura" name="altura">

                <label for="peso">Peso: </label>
                <input type="text" id="peso" name="peso">

                <label for="categoria">Categoria: </label>
                <input type="text" id="categoria" name="categoria">

                <label for="habilidade">Habilidade: </label>
                <input type="text" id="habilidade" name="habilidade">

                <center>
                <button id="btnCadastrar" type="submit">Cadastrar</button>    
                </center>

            </form>

        </section>
    </main>
    
    <footer id='footer'>
        <center>
           <small>
            ©2021 Pokémon. TM, ®Nintendo.
        </small> 
        </center>
    </footer>
    
    <script src="/public/script.js"></script>
</body>
</html>